{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "src/__tests__/**",
    "src/__mocks__/**",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
